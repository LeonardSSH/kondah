{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"strict": true,
		"lib": [
			"es6",
			"DOM"
		],
	},
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}